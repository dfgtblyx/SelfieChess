<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User1choose">

    <TextView
        android:id="@+id/chooseTwoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="111dp"
        android:layout_marginLeft="111dp"
        android:layout_marginEnd="112dp"
        android:layout_marginRight="112dp"
        android:gravity="center_horizontal"
        android:text="User2: Please choose one character!"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="308dp"
        android:layout_height="450dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseTwoText">

        <RadioButton
            android:id="@+id/checkGeoff1_u2"
            android:layout_width="wrap_content"
            android:layout_height="143dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:button="@drawable/geoff1"
            android:checked="true"
            android:onClick="checkButton"
            android:text="Choose me!" />

        <RadioButton
            android:id="@+id/checkGeoff2_u2"
            android:layout_width="wrap_content"
            android:layout_height="164dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:button="@drawable/geoff2"
            android:onClick="checkButton"
            android:text="Choose me!" />

        <RadioButton
            android:id="@+id/checkBen_u2"
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            android:button="@drawable/ben"
            android:onClick="checkButton"
            android:text="Choose me!" />
    </RadioGroup>

    <Button
        android:id="@+id/next_step2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Go!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

</androidx.constraintlayout.widget.ConstraintLayout>